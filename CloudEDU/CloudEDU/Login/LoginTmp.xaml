<Page
    x:Class="CloudEDU.Login.LoginTmp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CloudEDU.Login"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ControlTemplate TargetType="Button" x:Key="UserImage">
            <Border Background="#75B3C5" Width="150" Height="150" CornerRadius="1000">
                <Image HorizontalAlignment="Center" VerticalAlignment="Center"
                       Height="140" Width="140" Stretch="Fill" Source="{TemplateBinding Content}" />
            </Border>
        </ControlTemplate>
        <ControlTemplate TargetType="Button" x:Key="AddUser">
            <Border Background="#75B3C5" Width="150" Height="150" CornerRadius="1000">
                <TextBlock Text="{TemplateBinding Content}"
                           Height="300" Width="200" FontSize="210" Foreground="#BDDBE4" Margin="0, -90, 0, 0" />
            </Border>
        </ControlTemplate>
    </Page.Resources>

    <Grid Background="{StaticResource LoginPageBackgroundThemeBrush}">

        <ListView Name="UserList" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <Button Template="{StaticResource UserImage}" Content="{Binding ImageSource}" />
                        <TextBlock FontSize="25" Text="{Binding Username}" Width="150" Height="50"
                                   FontFamily="Candara" TextAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Orientation="Horizontal" >
            <Button Template="{StaticResource UserImage}" Content="../Images/Users/ania.png" />
            <Button Template="{StaticResource UserImage}" Content="../Images/Users/ania.png" />
            <Button Template="{StaticResource UserImage}" Content="../Images/Users/ania.png" />
            <Button Template="{StaticResource UserImage}" Content="../Images/Users/ania.png" />
            <Button Template="{StaticResource AddUser}" Content="+" />
        </StackPanel>

    </Grid>
</Page>